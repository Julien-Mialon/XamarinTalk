<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:converters="using:TwitterWall.Android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<Resources>
		<converters:UriConverter Key="UriConverter" />

		<DataTemplate Key="TweetTemplate">
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
						  android:orientation="horizontal"
						  android:layout_width="fill_parent"
						  android:layout_height="wrap_content"
						  >
				<RemoteImageView android:layout_width="80dp"
						   android:layout_height="fill_parent"
						   SourceUri="{Binding UserImage}"
						   />

				<LinearLayout android:orientation="vertical"
							  android:layout_width="fill_parent"
							  android:layout_height="wrap_content"
							  >
					<TextView Text="{Binding UserName}"
							  android:layout_width="fill_parent"
							  android:layout_height="wrap_content"
							 />
					<TextView Text="{Binding Text}"
							  android:layout_width="fill_parent"
							  android:layout_height="wrap_content"
							/>
				</LinearLayout>
			</LinearLayout>
		</DataTemplate>
	</Resources>

	<ListView android:layout_width="fill_parent"
			  android:layout_height="fill_parent"
			  adapter="{Binding Tweets, Template={Resource TweetTemplate}}"
			  />
</LinearLayout>